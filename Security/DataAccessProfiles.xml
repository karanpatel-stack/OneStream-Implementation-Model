      <Instance Name="ProductManager_Defense" AssignedProductFamily="PL_Defense" />
    </ProfileInstances>
  </Profile>

  <!-- ============================================================ -->
  <!-- PROFILE: DeptHead                                             -->
  <!-- Access to assigned cost centers                               -->
  <!-- ============================================================ -->
  <Profile Name="DeptHead"
           Description="Department head access restricted to assigned cost centers with Budget write and broad read visibility"
           IsActive="true">

    <DimensionSecurity>
      <Dimension Name="Entity">
        <AccessRule>
          <Member Name="{AssignedEntity}" AccessLevel="ReadWrite" IncludeDescendants="false" />
        </AccessRule>
        <AccessRule>
          <Member Name="AllEntities" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD2_CostCenter">
        <AccessRule>
          <Member Name="{AssignedCostCenters}" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Description>Specific cost centers managed by the department head</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="AllCostCenters" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="Account">
        <AccessRule>
          <Member Name="OPEX" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Description>Write access limited to operating expense accounts for budget input</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="AllAccounts" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD1_Product">
        <AccessRule>
          <Member Name="AllProducts" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="Scenario">
        <AccessRule>
          <Member Name="Actual" AccessLevel="Read" />
          <Member Name="Budget" AccessLevel="ReadWrite" />
          <Member Name="Forecast" AccessLevel="Read" />
        </AccessRule>
      </Dimension>
    </DimensionSecurity>

    <AssignedRoles>
      <Role Name="DepartmentHead" />
    </AssignedRoles>

    <ProfileInstances>
      <Instance Name="DeptHead_Engineering_P1" AssignedEntity="E_NA_Plant01"
                AssignedCostCenters="CC_NA_Plant01_Engineering,CC_NA_Plant01_QA" />
      <Instance Name="DeptHead_Marketing_P1" AssignedEntity="E_NA_Plant01"
                AssignedCostCenters="CC_NA_Marketing" />
      <Instance Name="DeptHead_Operations_P2" AssignedEntity="E_NA_Plant02"
                AssignedCostCenters="CC_NA_Plant02_Ops,CC_NA_Plant02_Maint" />
      <Instance Name="DeptHead_Sales_NA" AssignedEntity="E_NA_Sales"
                AssignedCostCenters="CC_NA_Sales_Inside,CC_NA_Sales_Field" />
      <Instance Name="DeptHead_RD" AssignedEntity="E_NA_Corporate"
                AssignedCostCenters="CC_RD_Core,CC_RD_Advanced,CC_RD_Testing" />
    </ProfileInstances>
  </Profile>

