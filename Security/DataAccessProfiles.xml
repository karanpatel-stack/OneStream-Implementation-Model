  <!-- ============================================================ -->
  <!-- PROFILE: Corporate                                            -->
  <!-- Full access to all dimension members                          -->
  <!-- ============================================================ -->
  <Profile Name="Corporate"
           Description="Corporate-level access with unrestricted visibility to all entity members, products, cost centers, and projects"
           IsActive="true">

    <DimensionSecurity>
      <Dimension Name="Entity">
        <AccessRule>
          <Member Name="AllEntities" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Member Name="E_Consolidated" AccessLevel="ReadWrite" />
          <Member Name="E_Eliminations" AccessLevel="ReadWrite" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD1_Product">
        <AccessRule>
          <Member Name="AllProducts" AccessLevel="ReadWrite" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD2_CostCenter">
        <AccessRule>
          <Member Name="AllCostCenters" AccessLevel="ReadWrite" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD4_Project">
        <AccessRule>
          <Member Name="AllProjects" AccessLevel="ReadWrite" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD6_Channel">
        <AccessRule>
          <Member Name="AllChannels" AccessLevel="ReadWrite" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="Scenario">
        <AccessRule>
          <Member Name="Actual" AccessLevel="ReadWrite" />
          <Member Name="Budget" AccessLevel="ReadWrite" />
          <Member Name="Forecast" AccessLevel="ReadWrite" />
          <Member Name="FlexBudget" AccessLevel="ReadWrite" />
        </AccessRule>
      </Dimension>
    </DimensionSecurity>

    <AssignedRoles>
      <Role Name="SystemAdmin" />
      <Role Name="CorporateController" />
      <Role Name="FPADirector" />
    </AssignedRoles>
  </Profile>

