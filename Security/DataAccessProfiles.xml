  <!-- ============================================================ -->
  <!-- PROFILE: PlantLevel                                           -->
  <!-- Access to a single plant entity only                          -->
  <!-- ============================================================ -->
  <Profile Name="PlantLevel"
           Description="Plant-level access restricted to a single manufacturing plant entity with read-only parent visibility"
           IsActive="true">

    <DimensionSecurity>
      <Dimension Name="Entity">
        <AccessRule>
          <Member Name="{AssignedPlant}" AccessLevel="ReadWrite" IncludeDescendants="false" />
          <Description>Single plant assignment, e.g., E_NA_Plant01, E_EU_Plant02, etc.</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="{ParentRegion}" AccessLevel="Read" IncludeDescendants="false" />
          <Description>Read-only access to the parent regional rollup for context</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="E_Consolidated" AccessLevel="Read" IncludeDescendants="false" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD1_Product">
        <AccessRule>
          <Member Name="{PlantProductLines}" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Description>Products manufactured at the assigned plant</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="AllProducts" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD2_CostCenter">
        <AccessRule>
          <Member Name="{PlantCostCenters}" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Description>Cost centers associated with the assigned plant</Description>
        </AccessRule>
      </Dimension>

      <Dimension Name="UD4_Project">
        <AccessRule>
          <Member Name="{PlantProjects}" AccessLevel="ReadWrite" IncludeDescendants="false" />
          <Description>Capital projects at the assigned plant</Description>
        </AccessRule>
      </Dimension>

      <Dimension Name="Scenario">
        <AccessRule>
          <Member Name="Actual" AccessLevel="ReadWrite" />
          <Member Name="Budget" AccessLevel="Read" />
          <Member Name="Forecast" AccessLevel="Read" />
        </AccessRule>
      </Dimension>
    </DimensionSecurity>

    <AssignedRoles>
      <Role Name="PlantController" />
    </AssignedRoles>

    <!-- Plant-specific profile instances -->
    <ProfileInstances>
      <Instance Name="PlantLevel_NA_Plant01" PlantMember="E_NA_Plant01" ParentRegion="E_Americas"
                PlantProductLines="PL_Automotive,PL_Industrial" PlantCostCenters="CC_NA_Plant01_Ops,CC_NA_Plant01_Maint,CC_NA_Plant01_QA"
                PlantProjects="PRJ_PE_NewLine,PRJ_ME_CNCMachines,PRJ_ME_RoboticWeld" />
      <Instance Name="PlantLevel_NA_Plant02" PlantMember="E_NA_Plant02" ParentRegion="E_Americas"
                PlantProductLines="PL_Aerospace,PL_Defense" PlantCostCenters="CC_NA_Plant02_Ops,CC_NA_Plant02_Maint,CC_NA_Plant02_QA"
                PlantProjects="PRJ_PE_Warehouse,PRJ_ME_PaintBooth" />
      <Instance Name="PlantLevel_NA_Plant03" PlantMember="E_NA_Plant03" ParentRegion="E_Americas"
                PlantProductLines="PL_Consumer,PL_Medical" PlantCostCenters="CC_NA_Plant03_Ops,CC_NA_Plant03_Maint,CC_NA_Plant03_QA"
                PlantProjects="PRJ_ME_Conveyor,PRJ_ME_QualityInsp" />
      <Instance Name="PlantLevel_EU_Plant01" PlantMember="E_EU_Plant01" ParentRegion="E_EMEA"
                PlantProductLines="PL_Automotive,PL_Industrial" PlantCostCenters="CC_EU_Plant01_Ops,CC_EU_Plant01_Maint,CC_EU_Plant01_QA"
                PlantProjects="PRJ_IT_MES,PRJ_ES_AirFiltration" />
      <Instance Name="PlantLevel_EU_Plant02" PlantMember="E_EU_Plant02" ParentRegion="E_EMEA"
                PlantProductLines="PL_Aerospace" PlantCostCenters="CC_EU_Plant02_Ops,CC_EU_Plant02_Maint,CC_EU_Plant02_QA"
                PlantProjects="PRJ_ES_WasteWater" />
