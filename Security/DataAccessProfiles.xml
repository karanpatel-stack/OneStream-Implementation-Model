      <Dimension Name="UD6_Channel">
        <AccessRule>
          <Member Name="AllChannels" AccessLevel="ReadWrite" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="Scenario">
        <AccessRule>
          <Member Name="Actual" AccessLevel="Read" />
          <Member Name="Budget" AccessLevel="ReadWrite" />
          <Member Name="Forecast" AccessLevel="ReadWrite" />
        </AccessRule>
      </Dimension>
    </DimensionSecurity>

    <AssignedRoles>
      <Role Name="FPAAnalyst" />
    </AssignedRoles>

    <ProfileInstances>
      <Instance Name="ProductManager_Automotive" AssignedProductFamily="PL_Automotive" />
      <Instance Name="ProductManager_Aerospace" AssignedProductFamily="PL_Aerospace" />
      <Instance Name="ProductManager_Industrial" AssignedProductFamily="PL_Industrial" />
      <Instance Name="ProductManager_Consumer" AssignedProductFamily="PL_Consumer" />
