           IsActive="true">

    <DimensionSecurity>
      <Dimension Name="Entity">
        <AccessRule>
          <Member Name="AllEntities" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD1_Product">
        <AccessRule>
          <Member Name="{AssignedProductFamily}" AccessLevel="ReadWrite" IncludeDescendants="true" />
          <Description>Product families assigned to the product manager</Description>
        </AccessRule>
        <AccessRule>
          <Member Name="AllProducts" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
      </Dimension>

      <Dimension Name="UD2_CostCenter">
        <AccessRule>
          <Member Name="AllCostCenters" AccessLevel="Read" IncludeDescendants="true" />
        </AccessRule>
