  <!-- ============================================================ -->
  <!-- ROLE: SystemAdmin                                             -->
  <!-- Full administrative access to all application features        -->
  <!-- ============================================================ -->
  <Role Name="SystemAdmin"
        Description="Full system administration access with unrestricted permissions across all dimensions, cubes, and system features"
        IsActive="true"
        RoleType="Administrative">

    <CubeAccess>
      <Cube Name="Finance" AccessLevel="ReadWrite" />
      <Cube Name="Workforce" AccessLevel="ReadWrite" />
      <Cube Name="Statistics" AccessLevel="ReadWrite" />
      <Cube Name="Rates" AccessLevel="ReadWrite" />
    </CubeAccess>

    <DimensionAccess>
      <Dimension Name="Entity">
        <MemberAccess Member="AllEntities" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="Account">
        <MemberAccess Member="AllAccounts" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="Scenario">
        <MemberAccess Member="Actual" AccessLevel="ReadWrite" />
        <MemberAccess Member="Budget" AccessLevel="ReadWrite" />
        <MemberAccess Member="Forecast" AccessLevel="ReadWrite" />
        <MemberAccess Member="FlexBudget" AccessLevel="ReadWrite" />
      </Dimension>
      <Dimension Name="Time">
        <MemberAccess Member="AllTime" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="UD1_Product">
        <MemberAccess Member="AllProducts" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="UD2_CostCenter">
        <MemberAccess Member="AllCostCenters" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="UD4_Project">
        <MemberAccess Member="AllProjects" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
      <Dimension Name="UD6_Channel">
        <MemberAccess Member="AllChannels" AccessLevel="ReadWrite" IncludeDescendants="true" />
      </Dimension>
    </DimensionAccess>

    <WorkflowActions>
      <Action Name="Submit" Allowed="true" />
      <Action Name="Approve" Allowed="true" />
      <Action Name="Reject" Allowed="true" />
      <Action Name="Lock" Allowed="true" />
      <Action Name="Unlock" Allowed="true" />
      <Action Name="Publish" Allowed="true" />
      <Action Name="SignOff" Allowed="true" />
    </WorkflowActions>

    <SystemPermissions>
      <Permission Name="ManageApplications" Granted="true" />
      <Permission Name="ManageSecurity" Granted="true" />
      <Permission Name="ManageDimensions" Granted="true" />
      <Permission Name="ManageBusinessRules" Granted="true" />
      <Permission Name="ManageCubeViews" Granted="true" />
      <Permission Name="ManageDataManagement" Granted="true" />
      <Permission Name="ManageWorkflow" Granted="true" />
      <Permission Name="ViewAuditLog" Granted="true" />
      <Permission Name="ManageUsers" Granted="true" />
      <Permission Name="ExecuteDataLoad" Granted="true" />
      <Permission Name="ClearData" Granted="true" />
      <Permission Name="ManageConsolidation" Granted="true" />
    </SystemPermissions>

    <CubeViewAccess>
      <CubeView Name="*" AccessLevel="ReadWrite" />
    </CubeViewAccess>
  </Role>

