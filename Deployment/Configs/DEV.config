<?xml version="1.0" encoding="utf-8"?>
<!--
    OneStream XF Environment Configuration
    Environment: DEV (Development)
    Application: MFG_Enterprise_DEV
    Last Updated: 2026-02-18

    This configuration file defines environment-specific settings for the
    DEV deployment of the OneStream XF manufacturing enterprise application.

    IMPORTANT: Do not store credentials in this file. All credentials are
    managed through the OneStream Credential Vault and environment variables.
-->
<EnvironmentConfig>

    <!-- Server and Application -->
    <ServerUrl>https://onestream-dev.company.com</ServerUrl>
    <DatabaseName>OS_DEV</DatabaseName>
    <ApplicationName>MFG_Enterprise_DEV</ApplicationName>
    <EnvironmentName>Development</EnvironmentName>
    <EnvironmentCode>DEV</EnvironmentCode>

    <!-- Application Settings -->
    <Settings>
        <LogLevel>Debug</LogLevel>
        <SampleDataEnabled>true</SampleDataEnabled>
        <NotificationsEnabled>false</NotificationsEnabled>
        <BackupEnabled>true</BackupEnabled>
        <SessionTimeoutMinutes>120</SessionTimeoutMinutes>
        <MaxConcurrentUsers>20</MaxConcurrentUsers>
        <CalculationTimeoutMinutes>60</CalculationTimeoutMinutes>
        <ApiRateLimitEnabled>false</ApiRateLimitEnabled>
        <PerformanceProfilingEnabled>true</PerformanceProfilingEnabled>
        <AuditTrailDetailLevel>Verbose</AuditTrailDetailLevel>
        <DataValidationStrictness>WarnOnly</DataValidationStrictness>
    </Settings>

    <!-- Source System Connections (DEV instances) -->
    <Connections>
        <Connection Name="CONN_SAP_HANA" Type="JDBC">
            <ServerHost>saphana-dev.corp.internal</ServerHost>
            <Port>30015</Port>
            <DatabaseSchema>SAPDEV</DatabaseSchema>
            <AuthMethod>SQLLogin</AuthMethod>
            <CredentialVaultKey>SAP_HANA_DEV</CredentialVaultKey>
            <ConnectionPoolSize>5</ConnectionPoolSize>
            <ConnectionTimeoutSeconds>30</ConnectionTimeoutSeconds>
            <CommandTimeoutSeconds>300</CommandTimeoutSeconds>
        </Connection>
        <Connection Name="CONN_Oracle_EBS" Type="ODBC">
            <ServerHost>oradb-dev.corp.internal</ServerHost>
            <Port>1521</Port>
            <ServiceName>EBSDEV</ServiceName>
            <AuthMethod>SQLLogin</AuthMethod>
            <CredentialVaultKey>ORACLE_EBS_DEV</CredentialVaultKey>
            <ConnectionPoolSize>5</ConnectionPoolSize>
            <ConnectionTimeoutSeconds>30</ConnectionTimeoutSeconds>
            <CommandTimeoutSeconds>300</CommandTimeoutSeconds>
        </Connection>
        <Connection Name="CONN_NetSuite_API" Type="REST">
            <BaseUrl>https://12345-sb1.suitetalk.api.netsuite.com</BaseUrl>
            <AuthMethod>TokenBasedAuth</AuthMethod>
            <CredentialVaultKey>NETSUITE_DEV</CredentialVaultKey>
            <RequestTimeoutSeconds>60</RequestTimeoutSeconds>
            <MaxRetries>3</MaxRetries>
            <RateLimitRequestsPerMinute>20</RateLimitRequestsPerMinute>
        </Connection>
        <Connection Name="CONN_Workday_API" Type="REST">
            <BaseUrl>https://wd5-impl.myworkday.com/ccx/api</BaseUrl>
            <AuthMethod>OAuth2ClientCredentials</AuthMethod>
            <CredentialVaultKey>WORKDAY_DEV</CredentialVaultKey>
            <TokenEndpoint>https://wd5-impl.myworkday.com/ccx/oauth2/token</TokenEndpoint>
            <RequestTimeoutSeconds>60</RequestTimeoutSeconds>
            <MaxRetries>3</MaxRetries>
        </Connection>
        <Connection Name="CONN_MES_SFTP" Type="SFTP">
            <ServerHost>sftp-dev.mfg.internal</ServerHost>
            <Port>22</Port>
            <RemotePath>/onestream/inbound/mes/</RemotePath>
            <ArchivePath>/onestream/archive/mes/</ArchivePath>
            <AuthMethod>SSHKey</AuthMethod>
            <CredentialVaultKey>MES_SFTP_DEV</CredentialVaultKey>
        </Connection>
        <Connection Name="CONN_FileShare" Type="UNC">
            <Path>\\fileserver-dev\onestream\data</Path>
            <AuthMethod>WindowsAuth</AuthMethod>
        </Connection>
    </Connections>

    <!-- Email Configuration -->
    <Email>
        <SmtpServer>smtp-dev.company.com</SmtpServer>
        <SmtpPort>587</SmtpPort>
        <UseTls>true</UseTls>
        <FromAddress>noreply-dev@company.com</FromAddress>
        <FromDisplayName>OneStream DEV (Do Not Reply)</FromDisplayName>
        <!-- Notifications disabled in DEV; all emails redirected to dev team -->
        <OverrideRecipient>onestream-dev-team@company.com</OverrideRecipient>
    </Email>

    <!-- Backup Configuration -->
    <Backup>
        <Enabled>true</Enabled>
        <Schedule>Daily 02:00</Schedule>
        <RetentionDays>7</RetentionDays>
        <BackupPath>\\backup-dev\onestream\OS_DEV</BackupPath>
        <CompressionEnabled>true</CompressionEnabled>
    </Backup>

    <!-- Data Management -->
    <DataManagement>
        <StagingSchema>STG</StagingSchema>
        <StagingRetentionDays>7</StagingRetentionDays>
        <ErrorRetentionDays>30</ErrorRetentionDays>
        <ParallelExtractionThreads>2</ParallelExtractionThreads>
        <BatchSize>10000</BatchSize>
    </DataManagement>

</EnvironmentConfig>
